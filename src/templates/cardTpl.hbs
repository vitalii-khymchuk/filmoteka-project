{{#each this}}
<li class="film-card">
    <a class="film-card__link" href="">
        <img class="film-card__img " src="{{poster_path}}" alt="{{title}}" loading="lazy"/>
        <div class="film-card__info">
                <span class="film-card__title">{{title}}</span> <br>
                <span class="film-card__genre">{{genre}}</span>
                <span class="film-card__year">{{release_date}}</span>
                <span class="film-card__rating">10.0</span>
            </br>
              
        </div>
    </a>
    </li>

 {{/each}}